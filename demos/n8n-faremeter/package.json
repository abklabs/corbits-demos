{
  "name": "n8n-nodes-faremeter",
  "version": "0.1.0",
  "description": "x402-enabled webhook nodes for n8n with Faremeter payment support",
  "license": "LGPL-3.0-only",
  "main": "index.js",
  "scripts": {
    "build": "tsc && npm run copy-assets",
    "copy-assets": "node scripts/copy-assets.js",
    "dev": "tsc --watch",
    "docker:build": "./scripts/docker-build.sh",
    "docker:start": "./scripts/docker-start.sh",
    "docker:stop": "docker stop n8n && docker rm n8n",
    "docker:logs": "docker logs -f n8n"
  },
  "files": [
    "dist"
  ],
  "n8n": {
    "n8nNodesApiVersion": 1,
    "credentials": [
      "dist/credentials/FaremeterApi.credentials.js"
    ],
    "nodes": [
      "dist/nodes/x402Webhook/x402Webhook.node.js",
      "dist/nodes/x402WebhookResponder/x402WebhookResponder.node.js"
    ]
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.19",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@faremeter/fetch": "^0.3.0",
    "@faremeter/middleware": "^0.5.0",
    "@faremeter/types": "^0.5.0",
    "arktype": "2.1.21",
    "dotenv": "^17.2.2"
  },
  "peerDependencies": {
    "n8n-core": ">=1.0.0",
    "n8n-workflow": ">=1.0.0"
  }
}
